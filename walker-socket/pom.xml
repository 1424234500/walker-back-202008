<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.walker</groupId>
		<artifactId>walker</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>walker-socket</artifactId>
	<name>socket</name>
	<description>netty socket active mq</description>

<build>
<plugins>
	<plugin>  
        <groupId>org.apache.maven.plugins</groupId>  
        <artifactId>maven-jar-plugin</artifactId>  
        <version>2.6</version>  
        <configuration>  
        <archive>  
            <manifest>  
            <addClasspath>true</addClasspath> 
            <classpathPrefix>lib/</classpathPrefix>  
            <mainClass>com.walker.socket.Launcher</mainClass>  <!-- 指定启动类 -->
            </manifest>  
        </archive>  
        </configuration>  
    </plugin>  
    <plugin>  
        <groupId>org.apache.maven.plugins</groupId>  
        <artifactId>maven-dependency-plugin</artifactId>  
        <version>2.10</version>  
        <executions>  
        <execution>  
            <id>copy-dependencies</id>  
            <phase>package</phase>  
            <goals>  
            <goal>copy-dependencies</goal>  
            </goals>  
            <configuration>  
            <outputDirectory>${project.build.directory}/lib</outputDirectory>  	<!-- copy lib目录 -->
            </configuration>  
        </execution>  
        </executions>  
    </plugin>  
</plugins>
</build>

	<dependencies>
		<dependency>
			<groupId>com.walker</groupId>
			<artifactId>walker-core</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>


		<!-- https://mvnrepository.com/artifact/io.netty/netty-all -->
		<dependency>
			<groupId>io.netty</groupId>
			<artifactId>netty-all</artifactId>
			<version>4.1.24.Final</version>
		</dependency>


		<!-- https://mvnrepository.com/artifact/org.slf4j/slf4j-api -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.25</version>
		</dependency>




	</dependencies>
</project>